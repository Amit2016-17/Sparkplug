<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="org.eclipse.paho.android.sample.activity.MessagesFragment"
    android:layout_marginTop="56dp">




    <LinearLayout
        android:id="@+id/analog_one_group"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/analog_one_message_label"
            style="@style/spinnerTextFieldLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Analog 1" />

        <org.eclipse.paho.android.sample.components.CustomEditText
            android:id="@+id/analogOne"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="30dp"
            android:ems="10"
            android:inputType="numberDecimal"
            android:lines="1" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/analog_two_group"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/analog_one_group">

        <TextView
            android:id="@+id/analog_two_message_label"
            style="@style/spinnerTextFieldLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Analog 2" />

        <org.eclipse.paho.android.sample.components.CustomEditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="30dp"
            android:inputType="numberDecimal"
            android:ems="10"
            android:lines="1"
            android:id="@+id/analogTwo"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/analog_three_group"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/analog_two_group">

        <TextView
            android:id="@+id/analog_three_message_label"
            style="@style/spinnerTextFieldLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Analog 3" />

        <org.eclipse.paho.android.sample.components.CustomEditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="30dp"
            android:inputType="numberDecimal"
            android:ems="10"
            android:lines="1"
            android:id="@+id/analogThree"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/analog_four_group"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/analog_three_group">

        <TextView
            android:id="@+id/analog_four_message_label"
            style="@style/spinnerTextFieldLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Analog 4" />

        <org.eclipse.paho.android.sample.components.CustomEditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="30dp"
            android:inputType="numberDecimal"
            android:ems="10"
            android:lines="1"
            android:id="@+id/analogFour"/>
    </LinearLayout>



    <View
        android:id="@+id/divider8"
        style="@style/Divider"
        android:layout_below="@+id/analog_four_group" />


    <Switch
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Boolean 1"
        android:id="@+id/booleanOne"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_below="@+id/divider8"/>

    <Switch
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Boolean 2"
        android:id="@+id/booleanTwo"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_below="@+id/booleanOne"/>

    <Switch
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Boolean 3"
        android:id="@+id/booleanThree"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_below="@+id/booleanTwo"/>

    <Switch
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Boolean 4"
        android:id="@+id/booleanFour"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_below="@+id/booleanThree"/>


    <View
        android:id="@+id/divider9"
        style="@style/Divider"
        android:layout_below="@+id/booleanFour" />



    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:id="@+id/io_submit_button"
        android:layout_below="@+id/divider9"
        android:layout_centerHorizontal="true" />




</RelativeLayout>