<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="org.eclipse.paho.android.sample.activity.HelpFragment">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:src="@drawable/cirrus_link_logo_main"
        android:layout_alignParentTop="true"
        android:contentDescription="@string/help_paho" />

    <TextView
        android:id="@+id/label"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:textSize="30sp"
        android:text="@string/help_title"
        android:textStyle="bold"
        android:padding="0dp"
        android:layout_below="@+id/imageView"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/help_cirruslink_website"
        android:id="@+id/websiteButton"
        android:layout_marginTop="24dp"
        android:layout_below="@+id/label"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/help_docs_website"
        android:id="@+id/docsWebsiteButton"
        android:layout_marginTop="24dp"
        android:layout_below="@+id/websiteButton"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/help_github_website"
        android:id="@+id/githubWebsiteButton"
        android:layout_marginTop="24dp"
        android:layout_below="@+id/docsWebsiteButton"
        android:layout_centerHorizontal="true" />

    <!--
    <Button
